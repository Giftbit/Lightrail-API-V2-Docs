        "discount": true,
        "fixedInitialBalances": [
          500
        ]
      }
    },
    {
      "callId": "listPrograms1",
      "method": "GET",
      "endpoint": "/programs"
    },
    {
      "callId": "updateProgram1",
      "method": "PATCH",
      "endpoint": "/programs/{REQUEST_REPLACEMENT:createProgram1.body.id}",
